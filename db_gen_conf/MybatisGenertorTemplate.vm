##end
		<table tableName="$columnArray.get(0)">
			<property name="immutable" value="true"/>
#if($columnArray.get(1) == 'true' || $columnArray.get(1) == 'TRUE')
			<property name="type" value="view"/>
#end
		</table>
#end
	</context>
</generatorConfiguration>
